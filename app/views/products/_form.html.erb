<div class="row">
  <div class="col-lg-12">
    <div class="card p-5">
      <%= form_with model: @product do |f| %>
        <% if @product.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <!-- Campo Nombre -->
        <div class="form-group">
          <%= f.label :name, "Nombre" %>
          <%= f.text_field :name, class: "form-control", placeholder: 'Nombre' %>
        </div>
        
        <!-- Campo Precio -->
        <div class="form-group">
          <%= f.label :price, "Precio" %>
          <%= f.number_field :price, class: "form-control", placeholder: 'Precio', step: 0.01, min: 0 %>
        </div>
        
        <!-- Campo Descripción -->
        <div class="form-group">
          <%= f.label :description, "Descripción" %>
          <%= f.text_area :description, class: "form-control", placeholder: 'Aquí la descripción del producto' %>
        </div>
        
        <!-- Botón Enviar -->
        <div class="form-group">
          <%= f.submit "Enviar", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>